{
  "name": "@lindorm-io/koa-keystore",
  "description": "Keystore middleware for @lindorm-io/koa applications",
  "version": "0.4.6",
  "license": "ISC",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git@github.com:lindorm-io/koa-keystore.git"
  },
  "bugs": {
    "url": "https://github.com/lindorm-io/koa-keystore/issues"
  },
  "author": "Jonn Nilsson",
  "maintainers": [
    "jonn@jonn.nu"
  ],
  "scripts": {
    "build": "tsc",
    "build:clean": "rimraf dist",
    "check:lint": "eslint --ext .ts ./src/",
    "check:lint:fix": "eslint --ext .ts ./src/ --fix",
    "check:types": "tsc -p tsconfig.json --noEmit",
    "check:types:watch": "tsc -p tsconfig.json --noEmit --watch",
    "postpublish": "rimraf dist",
    "postversion": "git push --no-verify && git push --tags --no-verify",
    "prepublishOnly": "npm run build:clean && npm run build",
    "preversion": "npm run validate",
    "publish:major": "npm version major && npm publish",
    "publish:minor": "npm version minor && npm publish",
    "publish:patch": "npm version patch && npm publish",
    "test": "npm run test:unit && npm run test:integration",
    "test:clear": "jest --clearCache",
    "test:coverage": "rimraf coverage && jest --coverage --forceExit",
    "test:integration": "compd --file docker-compose.yml jest --config jest.config.integration.js --",
    "test:integration:watch": "compd --file docker-compose.yml jest --config jest.config.integration.js --watch --",
    "test:unit": "jest --config jest.config.js --",
    "test:unit:watch": "jest --config jest.config.js --watch --",
    "test:update": "jest --updateSnapshot",
    "test:watch": "npm run test:unit:watch",
    "update": "ncu -u && ncu -u",
    "validate": "npm run test:clear && npm run check:lint && npm run check:types && npm test"
  },
  "dependencies": {
    "@lindorm-io/axios": "^0.2.5",
    "@lindorm-io/core": "^0.2.8",
    "@lindorm-io/errors": "^0.1.10",
    "@lindorm-io/key-pair": "^0.3.4",
    "joi": "^17.4.2"
  },
  "peerDependencies": {
    "@lindorm-io/koa": ">=0.6.4",
    "@lindorm-io/mongo": ">=0.6.0",
    "@lindorm-io/redis": ">=0.4.4",
    "@lindorm-io/winston": ">=0.1.8"
  },
  "devDependencies": {
    "@lindorm-io/koa": "^0.6.4",
    "@lindorm-io/mongo": "^0.6.0",
    "@lindorm-io/redis": "^0.4.4",
    "@lindorm-io/winston": "^0.1.8",
    "@types/ioredis": "^4.27.4",
    "@types/jest": "^27.0.2",
    "@types/koa": "^2.13.4",
    "@types/koa-bodyparser": "^4.3.3",
    "@types/koa-router": "^7.4.4",
    "@types/lodash": "^4.14.173",
    "@types/node": "16.9.4",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "compd": "^3.0.0",
    "eslint": "^7.32.0",
    "husky": "^7.0.2",
    "jest": "^27.2.1",
    "jest-extended": "^0.11.5",
    "koa": "^2.13.1",
    "lint-staged": "^11.1.2",
    "mockdate": "^3.0.5",
    "mongodb": "^4.1.2",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  }
}
